{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="content">Question:</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="comments">Additional Comments:</label>
      {{input value=comments id="comments"}}
    </div>


    <button {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
  <button id="main"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
